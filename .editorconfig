root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,yml,yaml}]
indent_style = space
indent_size = 2

[*.{bash,bats,sh}]
binary_next_line = true
switch_case_indent = true

[bin/*]
binary_next_line = true
switch_case_indent = true

[test/fixtures/**]
ignore = true

[test/test_helper/**]
ignore = true
